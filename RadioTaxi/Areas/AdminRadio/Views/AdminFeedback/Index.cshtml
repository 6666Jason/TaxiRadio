<div id="feedback_vue">
    <table id="feedback_table" class="table table-bordered">
        <thead>
           <tr>
                <th>No</th>
                <th>Name</th>
                <th>Mobile</th>
                <th>Email</th>
                <th>Type</th>
                <th>User Name</th>
                <th></th>
           </tr>
            
        </thead>
        <tbody>
            <tr v-for="(item,index) in dataDrivers" :key="index">
                <td>{{index + 1}}</td>
                <td>
                    {{item.name}}
                </td>  
                <td>
                    {{item.mobile}}
                </td>
                  <td>
                    {{item.email}}
                </td>
                  <td>
                    {{item.type}}
                </td>
                 <td>
                    {{item.applicationUserMain.userName}}
                </td>
                <td>
                    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#View" v-on:click="getItemsById(item.id)">View</button>

                    <button type="button" class="btn btn-danger" v-on:click="getItemsByIdDelete(item.id)">Delete</button>
                </td>
            </tr>
        </tbody>

    </table>
    <div class="modal fade" id="View" data-bs-focus="false" aria-labelledby="View" aria-hidden="true" data-bs-backdrop="static" data-bs-keyboard="false">
        <div class="modal-dialog modal-xl ">
            <div class="modal-content ">
                <div class="modal-header">
                    <h5 class="modal-title" id="Add">Feedback</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close" v-on:click="resetData">X</button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-12">
                            <div class="mb-3">
                                <label class="form-label">Name </label>
                                <input class="form-control" type="text" placeholder="Name" aria-label="default input example" v-model="Name" disabled>
                            </div> 
                            <div class="mb-3">
                                <label class="form-label">Mobile </label>
                                <input class="form-control" type="text" placeholder="Mobile" aria-label="default input example" v-model="Mobile" disabled>
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Email </label>
                                <input class="form-control" type="text" placeholder="Email" aria-label="default input example" v-model="Email" disabled>
                            </div> 
                            <div class="mb-3">
                                <label class="form-label">Type </label>
                                <input class="form-control" type="text" placeholder="Type" aria-label="default input example" v-model="Type" disabled>
                            </div> 
                            
                            <div class="mb-3">
                                <label class="form-label">User Name </label>
                                <input class="form-control" type="text" placeholder="UserName" aria-label="default input example" v-model="UserName" disabled>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="mb-3">
                                <label class="form-label">Description </label> <br />
                                <textarea id="editorMain"  rows="8" v-model="Description" disabled> </textarea>
                            </div>
                        </div>
                    </div>
                   
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" v-on:click="resetData">Close</button>
                    
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/lib/config/datatableconfig.js"></script>
<script src="~/admin/js/adminjs/admin_feedback.js"></script>